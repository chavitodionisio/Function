#include<iostream>
using namespace std;

int add(int,int);
int multi(int,int);
main(){ 

   int a, b;
   cout<<"Enter the value for A: ";
   cin>>a;
   cout<<"Enter the value for A: ";
   cin>>a;
   
   cout<<"Addition of two number is="<< add(a,b)<<endl;
   cout<<"Product of two number is="<< multi(a,b)<<endl;
 	
 }
 
  int add(int x,int y)
  {
  	return x+y;
  }
  
  
  int multi(int x,int y)
  {
  	return x*y;
  }
